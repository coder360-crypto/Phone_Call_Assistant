# .env.example
# Application Settings
APP_NAME=Phone Call Assistant
DEBUG=false

VOICE_PROVIDER=twilio         # or vapi or retell
AUTOMATION_PROVIDER=zapier    # or make
SCHEDULING_PROVIDER=google_calendar   # or calcom or crm


# Voice AI Platforms
VAPI_API_KEY=your_vapi_api_key_here
VAPI_WEBHOOK_SECRET=your_vapi_webhook_secret_here

RETELL_API_KEY=your_retell_api_key_here
RETELL_WEBHOOK_SECRET=your_retell_webhook_secret_here

# Twilio (if using)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Google Calendar
GOOGLE_CALENDAR_CREDENTIALS_PATH=path/to/google/credentials.json
GOOGLE_CALENDAR_ID=your_calendar_id@group.calendar.google.com

# Cal.com
CALCOM_API_KEY=your_calcom_api_key_here
CALCOM_BASE_URL=https://api.cal.com

# Automation Platforms
MAKECOM_WEBHOOK_URL=https://hook.integromat.com/your_webhook_url
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your_webhook_url

# Business Information
BUSINESS_NAME=Your Business Name
BUSINESS_PHONE=+1234567890
BUSINESS_EMAIL=contact@yourbusiness.com
BUSINESS_ADDRESS=123 Main St, City, State 12345
BUSINESS_HOURS=Monday-Friday 9 AM to 6 PM
# Database (if using)
DATABASE_URL=sqlite:///./phone_assistant.db

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Timezone
TIMEZONE=UTC

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log